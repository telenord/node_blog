extends layout

block content
  h1= title
  if posts
    each post in posts
      .post
        h1
          a(href='/posts/show/' + post._id)
            =post.title
        p.meta Posted in #{post.category} by #{post.author} on #{moment(post.date).format("DD-MM-YYYY")}
        =post.body
        a.more(href='/posts/show/' + post._id) Read More

